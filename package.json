    "node-cron": "^3.0.3",
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "uuid": "^10.0.0",
    "yjs": "^13.6.18",
    "y-websocket": "^2.0.3",
    "jose": "^6.0.11",
