  "scripts": {
    "dev": "cd convex && convex dev",
    "build": "cd convex && convex deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
